<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".Customer.User_Signup">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:layout_margin="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/pizza"/>

        <EditText
            android:id="@+id/user_register_number"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:textColorHint="#FFFAFA"

            android:layout_height="60dp"
            android:hint="Cell number"
            android:textColor="#FFFAFA"
            android:textSize="20sp"
            android:ems="10"/>
        <EditText
            android:id="@+id/user_register_name"
            android:hint="Name"
            android:textColor="#FFFAFA"
            android:textSize="20sp"
            android:textColorHint="#FFFAFA"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/user_register_password"
            android:hint="Password"
            android:textColorHint="#FFFAFA"
            android:textSize="20sp"
            android:ems="10"
            android:textColor="#FFFAFA"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/user_confirm_register_password"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:ems="10"
            android:textColorHint="#FFFAFA"
            android:textColor="#FFFAFA"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/user_register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundbutton"
            android:text="Register"
            android:onClick="Register"
            tools:ignore="OnClick" />




    </LinearLayout>
</LinearLayout>